<Window x:Class="_2025_01_23WPF.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_01_23WPF"
        mc:Ignorable="d"
        Title="Új elem felvétele" Height="300" Width="350">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" MinHeight="96" />
            <RowDefinition Height="auto" MinHeight="79" />
            <RowDefinition Height="auto" MinHeight="159" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.ColumnSpan="2" Content="Új elem felvétele" HorizontalAlignment="Left" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Margin="109,7,0,0" Grid.Row="0" VerticalAlignment="Top" Width="130" Height="35"/>
        <TextBox Grid.Column="0" Grid.ColumnSpan="2" VerticalContentAlignment="Center" FontSize="20" HorizontalAlignment="Left" Margin="35,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="280" Height="39" x:Name="TBInput"/>
        <DatePicker x:Name="DeadLineDP" HorizontalAlignment="Left" Margin="16,0,0,0" Grid.Row="1" VerticalAlignment="Center" Grid.Column="0"  Width="146" Height="26"/>
        <CheckBox Grid.Column="1" x:Name="CB" Content="Teljesített" HorizontalAlignment="Left" VerticalAlignment="Center" Width="112" Height="26" VerticalContentAlignment="Center" Grid.Row="1" Margin="46,0,0,0"/>
        <Button Content="Hozzáadás" HorizontalAlignment="Left" Margin="40,39,0,0" Grid.Row="2" VerticalAlignment="Top" Height="42" Width="89" x:Name="AddBTN" Click="AddBTN_Click"/>
        <Button Content="Vissza" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Top" Height="42" Width="89" Grid.Column="1" x:Name="ReturnBTN" Margin="0,39,0,0" Click="ReturnBTN_Click"/>
    </Grid>
</Window>
