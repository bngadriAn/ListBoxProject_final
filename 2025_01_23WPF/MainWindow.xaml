<Window x:Class="_2025_01_23WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2025_01_23WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="560" Width="400"
        Icon="./Project_Icon.png">
    <Grid Margin="0,0,0,0" ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.ColumnSpan="2" VerticalContentAlignment="Center" BorderThickness="3" FontSize="20" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="230" Height="40" x:Name="TBSearch" Margin="17,0,0,0"/>
        <Button Grid.Row="0" Grid.Column="3" Content="Keresés" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="40" x:Name="SearchBTN" Click="SearchBTN_Click"/>
        <ListBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="2"  d:ItemsSource="{d:SampleData ItemCount=10}" x:Name="LB"/>

        <Button Grid.Row="3" Grid.Column="0" Content="Mentés" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="105" Height="50" x:Name="SaveBTN" Click="SaveBTN_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Frissítés" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="105" Height="50" x:Name="UpdateBTN" Click="UpdateBTN_Click"/>
        <Button Grid.Row="3" Grid.Column="2" Content="Törlés" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="105" Height="50" x:Name="DelBTN" Click="DelBTN_Click"/>
        <TextBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="3" VerticalContentAlignment="Center" FontSize="20" HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="351" Height="39" x:Name="TBInput"/>
        <Label Grid.Column="1" Content="Lista elemek kezelése" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"  Margin="0,20,0,0" Grid.Row="3" VerticalAlignment="Top" Width="132" Height="35"/>

    </Grid>
</Window>
